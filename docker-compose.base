version: '2'
services:
    endvote:
        container_name: endvote
        image: registry.gitlab.com/brombom43531/letvote-backend:REPLACE_GIT_LAST_HASH        
        restart: always
        ports:
            - 3000:3000
        environment:
            - NODE_ENV=production
            - URL=letvote.wtf
            - DATABASE=127.0.0.8
        command: 
            - mv /app/node_modules /app/letvote-backend
            - cd /app/letvote-backend npm start
